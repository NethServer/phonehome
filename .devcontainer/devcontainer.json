// https://aka.ms/devcontainer.json
{
	"name": "PhoneHome Sail",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "phonehome.localhost",
	"workspaceFolder": "/var/www/html",
	"settings": {},
	"extensions": [
		"mikestead.dotenv",
		"amiralizadeh9480.laravel-extra-intellisense",
		"ryannaddy.laravel-artisan",
		"onecentlin.laravel5-snippets",
		"onecentlin.laravel-blade",
		"hashicorp.hcl",
		"ms-azuretools.vscode-docker",
		"bmewburn.vscode-intelephense-client",
		"xdebug.php-debug"
	],
	"remoteUser": "sail",
	"postCreateCommand": "chown -R 1000:1000 /var/www/html && composer i && if [ ! -f .env ]; then cp .env.example .env; fi"
	// "forwardPorts": [],
	// "runServices": [],
	// "shutdownAction": "none",
}
