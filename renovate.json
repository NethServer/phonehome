{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":prHourlyLimitNone",
        ":semanticCommits",
        ":disableDependencyDashboard"
    ],
    "ignorePaths": [
        "**/deploy/ns8/ui/**"
    ],
    "schedule": [
        "before 9am on Wednesday"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "php"
            ],
            "allowedVersions": "<= 8.1"
        },
        {
            "matchPackageNames": [
                "postgres"
            ],
            "allowedVersions": "<= 14"
        },
        {
            "matchPackageNames": [
                "redis"
            ],
            "allowedVersions": "<= 6"
        },
        {
            "matchPackageNames": [
                "node"
            ],
            "allowedVersions": "<= 18"
        },
        {
            "matchManagers": [
                "composer"
            ],
            "matchUpdateTypes": [
                "minor", "patch"
            ],
            "groupName": "Composer Dependencies"
        },
        {
            "matchManagers": [
                "npm"
            ],
            "matchUpdateTypes": [
                "minor", "patch"
            ],
            "groupName": "NPM Dependencies"
        },
        {
            "matchManagers": [
                "dockerfile",
                "docker-compose",
                "regex"
            ],
            "matchUpdateTypes": [
                "minor", "patch"
            ],
            "groupName": "Docker Dependencies"
        }
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "containers\/.*\/Dockerfile"
            ],
            "matchStrings": [
                "ADD\\ https:\/\/github\\.com\/eficode\/wait-for\/releases\/download\/(?<currentValue>.*)\/wait-for"
            ],
            "depNameTemplate": "eficode/wait-for",
            "datasourceTemplate": "github-releases"
        },
        {
            "fileMatch": [
                "containers\/.*\/Dockerfile"
            ],
            "matchStrings": [
                "ADD\\ https:\/\/raw\\.githubusercontent\\.com\/renatomefi\/php-fpm-healthcheck\/(?<currentValue>.*)\/php-fpm-healthcheck"
            ],
            "depNameTemplate": "renatomefi/php-fpm-healthcheck",
            "datasourceTemplate": "github-releases"
        },
        {
            "fileMatch": [
                "deploy\/ns8\/Dockerfile"
            ],
            "matchStrings": [
                "docker\\.io\/redis:(?<currentValue>[^\\s]+)"
            ],
            "depNameTemplate": "redis",
            "datasourceTemplate": "docker"
        },
        {
            "fileMatch": [
                "deploy\/ns8\/Dockerfile"
            ],
            "matchStrings": [
                "docker\\.io\/postgres:(?<currentValue>[^\\s]+)"
            ],
            "depNameTemplate": "postgres",
            "datasourceTemplate": "docker"
        }
    ]
}
