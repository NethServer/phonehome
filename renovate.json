{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeMinor",
    ":prHourlyLimitNone",
    ":disableDependencyDashboard",
    "schedule:weekends"
  ],
  "rangeStrategy": "replace",
  "automergeType": "branch",
  "updateNotScheduled": false,
  "vulnerabilityAlerts": {
    "enabled": true,
    "assignees": ["@tbaile"]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "postgres"
      ],
      "allowedVersions": "<= 14"
    }
  ]
}
