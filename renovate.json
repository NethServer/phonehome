{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":reviewer(tbaile)",
        ":semanticCommits",
        ":disableDependencyDashboard"
    ],
    "ignorePaths": [
        "**/deploy/ns8/ui/**"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "php"
            ],
            "allowedVersions": "<= 8.1"
        },
        {
            "matchPackageNames": [
                "postgres"
            ],
            "allowedVersions": "<= 14"
        },
        {
            "matchPackageNames": [
                "redis"
            ],
            "allowedVersions": "<= 6"
        },
        {
            "matchPackageNames": [
                "node"
            ],
            "allowedVersions": "<= 18"
        }
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "(^|/|\\.)Dockerfile$"
            ],
            "matchStrings": [
                "ADD\\ https:\/\/github\\.com\/eficode\/wait-for\/releases\/download\/(?<currentValue>.*)\/wait-for"
            ],
            "depNameTemplate": "eficode/wait-for",
            "datasourceTemplate": "github-releases"
        },
        {
            "fileMatch": [
                "(^|/|\\.)Dockerfile$"
            ],
            "matchStrings": [
                "ADD\\ https:\/\/raw\\.githubusercontent\\.com\/renatomefi\/php-fpm-healthcheck\/(?<currentValue>.*)\/php-fpm-healthcheck"
            ],
            "depNameTemplate": "renatomefi/php-fpm-healthcheck",
            "datasourceTemplate": "github-releases"
        }
    ]
}
